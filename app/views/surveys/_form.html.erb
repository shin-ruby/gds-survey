<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company, '公司名称：' %>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :name, '姓　　名：' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :department, '部门职位：' %>
    <%= f.text_field :department %>
  </div>
  <div class="field">
    <%= f.label :phone, '电　　话：' %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email, '邮　　件：' %>
    <%= f.text_field :email %>
  </div>
    <br />
  <div class="field">
    <%= f.label :q1, 'Q1.贵单位的IT机房属于哪种类型:' %><br />
    <%= radio_button_tag(:q1, "a") %>
    <%= label_tag(:q1, "A.	企业自建") %>
    <%= radio_button_tag(:q1, "b") %>
    <%= label_tag(:q1, "B. 全部在IDC托管") %>
    <%= radio_button_tag(:q1, "c") %>
    <%= label_tag(:q1, "C. 部分在IDC托管") %>
    <%= radio_button_tag(:q1, "d") %>
    <%= label_tag(:q1, "D. 其它") %>
  </div>
  <div class="field">
    <%= f.label :q2, 'Q2. 贵单位的服务器台数:' %><br />
