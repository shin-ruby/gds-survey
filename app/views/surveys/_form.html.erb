    <%= radio_button_tag(:q3, "b") %>
    <%= label_tag(:q3, "B. 50－100万") %>
    <%= radio_button_tag(:q3, "c") %>
    <%= label_tag(:q3, "C. 100万－300万  ") %>
    <%= radio_button_tag(:q3, "d") %>
    <%= label_tag(:q3, "D. 300万以上") %>
  </div>
  <div class="field">
    <%= f.label :q4 ,'Q4. 贵单位目前IT运维人员有多少名:' %><br />
    <%= radio_button_tag(:q4, "a") %>
    <%= label_tag(:q4, "A.	10人以内 ") %>
    <%= radio_button_tag(:q4, "b") %>
    <%= label_tag(:q4, "B. 11－30人") %>
