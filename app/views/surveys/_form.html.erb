    <%= label_tag(:q7, "A. 是") %>
    <%= radio_button_tag(:q7, "b") %>
    <%= label_tag(:q7, "B. 否") %>
  </div>
  <div class="field">
    <%= f.label :q8, 'Q8. 贵单位对GDS如下服务是否有需求:' %><br />
